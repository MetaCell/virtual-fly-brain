{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run VFB Server",
      "type": "debugpy",
      "request": "launch",
      "module": "gunicorn",
      "cwd": "${workspaceFolder}/applications/virtual-fly-brain/backend",
      "args": [
        "--log-level=info",
        "--preload",
        "--bind=0.0.0.0:8080",
        "-w", "4",
        "virtual_fly_brain.__main__:app"
      ],
      "console": "integratedTerminal"
    },
    {
      "name": "Python Debugger: Flask",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": {
        "FLASK_APP": "applications/virtual-fly-brain/backend/virtual_fly_brain/__main__.py",
        "FLASK_DEBUG": "1"
      },
      "args": ["run", "--no-debugger", "--no-reload"],
      "jinja": true,
      "autoStartBrowser": false
    },
    // add a launcher for the tests
    {
      "name": "Python: Test",
      "type": "debugpy",
      "request": "launch",
      "module": "unittest",
      "cwd": "${workspaceFolder}",
      "justMyCode": false,
      "console": "integratedTerminal",
      "args": [
        "discover",
        "-s",
        "applications/virtual-fly-brain/backend/tests",
      ]
    }

  ]
}
